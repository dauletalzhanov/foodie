extends layout

block scripts 


block content 
	h1= title

	form(method="POST") 
		
		div
			label Food List
			
			ol 
				each item of menu.FoodAvailable
					- let time = item.TimeTakes
					li #{item.FoodName} - $#{item.FoodPrice} // 
						| #{time < 60 ? time + "sec" : Math.floor(time/60) + "min"}
						input(type="number", name=`${item._id}` min=0 max=20 value=0)
		
		button(type="submit") Submit